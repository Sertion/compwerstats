{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./baapp/",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "rootDir": "./basrc/",
        "moduleResolution": "node",
        "allowJs": false
    },
    "include": [
        "basrc/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}